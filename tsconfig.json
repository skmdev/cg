{
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "preserve",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "baseUrl": "./src",
    "incremental": true,
    "paths": {
      "common/*": ["./common/*"],
      "@/*": ["./client/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
